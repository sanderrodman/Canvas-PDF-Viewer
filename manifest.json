{
  "name": "Canvas File Manager",
  "description": "Stop cluttering your Downloads folder. This extension identifies Canvas files you've already accessed and opens them instantly in your browser, preventing duplicate downloads and saving you time.",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "Canvas-PDF-Viewer.html",
    "default_icon": "images/icon-128.png"
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*.edu/courses/*"
      ]
    }
  ],

  "background": {
    "service_worker": "scripts/service-worker.js"
  },

  "host_permissions": [
    "https://*.edu/courses/*"
  ],

  "permissions": [
    "activeTab",
    "downloads",
    "downloads.open"
  ]
}